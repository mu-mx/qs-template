{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "jsx": "react-jsx",
    "strictBindCallApply": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "paths": {},
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      }
    ]
  },
  "include": [
    "global.d.ts",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
		".vscode-test"
  ],
  "compileOnSave": false
}
